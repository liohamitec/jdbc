<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "model.Skill" table = "skills">
        <id name = "id" type = "java.lang.Long" column = "id">
            <generator class="identity"/>
        </id>

        <property name = "name" column = "name" type = "string"/>

        <set name="developers" table="developers_skills" inverse="true">
            <key>
                <column name="skills_id" not-null="true"/>
            </key>
            <many-to-many entity-name="model.Developer">
                <column name="developers_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>