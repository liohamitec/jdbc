<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "model.Developer" table = "developers">
        <id name = "id" type = "long" column = "id">
            <generator class="identity"/>
        </id>

        <property name = "name" column = "name" type = "string"/>
        <property name = "age" column = "age" type = "java.lang.Integer"/>
        <property name = "salary" column = "salary" type = "java.lang.Integer"/>

        <set name="skills" table="developers_skills" inverse="false">
            <key>
                <column name="developers_id" not-null="true"/>
            </key>
            <many-to-many entity-name="model.Skill">
                <column name="skills_id" not-null="true"/>
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>